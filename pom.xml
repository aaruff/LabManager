<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>edu.nyu.cess.remote.server</groupId>
  <artifactId>AppRemoteServer</artifactId>
  <version>1.0-SNAPSHOT</version>

  <dependencies>
  	<dependency>
  		<groupId>edu.nyu.cess.remote.common</groupId>
  		<artifactId>AppRemoteCommon</artifactId>
  		<version>1.0-SNAPSHOT</version>
  	</dependency>
  	<dependency>
  		<groupId>log4j</groupId>
  		<artifactId>log4j</artifactId>
  		<version>1.2.8</version>
  	</dependency>
  </dependencies>

  <dependencyManagement>
  	<dependencies>
  		<dependency>
  			<groupId>edu.nyu.cess.remote.common</groupId>
  			<artifactId>AppRemoteCommon</artifactId>
  			<version>1.0-SNAPSHOT</version>
  		</dependency>
  	</dependencies>
  </dependencyManagement>

  <name>AppRemoteServer</name>
  <organization>
  	<name>The Center for Experimental Social Science</name>
  	<url>http://cess.nyu.edu</url>
  </organization>

  <build>
	 <sourceDirectory>src/main/java</sourceDirectory>

    <plugins>
	    <plugin>
	        <artifactId>maven-compiler-plugin</artifactId>
	        <version>2.3.2</version>
	        <configuration>
	          <source>1.7</source>
	          <target>1.7</target>
	        </configuration>
	    </plugin>
	    
        <plugin>
	      	<groupId>org.apache.maven.plugins</groupId>
	      	<artifactId>maven-assembly-plugin</artifactId>
        </plugin>
         
        <plugin>
	      	<groupId>org.apache.maven.plugins</groupId>
	      	<artifactId>maven-jar-plugin</artifactId>
	      	<version>2.3.2</version>
	      	<configuration>
	          <archive>
	            <manifest>
	              <addClasspath>true</addClasspath>
	              <mainClass>edu.nyu.cess.remote.server.ServerInitializer</mainClass>
	            </manifest>
	          </archive>
	        </configuration>
        </plugin>
        
        <plugin>
			<groupId>org.apache.maven.plugins</groupId>
			<artifactId>maven-shade-plugin</artifactId>
	      	<version>2.1</version>
			<executions>
				<execution>
					<phase>package</phase>
					<goals>
						<goal>shade</goal>
					</goals>
				</execution>
			</executions>
			<configuration>
				<finalName>uber-${project.artifactId}-${project.version}</finalName>
			</configuration>
		</plugin>
    </plugins>
  </build>
</project>